<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeviceSync.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label x:Name="Address"/>
            
            <Entry x:Name="RemoteAddress" Placeholder="Введите адрес" Text="192.168.0.1"/>
            <Entry x:Name="LocalPort" Placeholder="Введите локальный порт" Text="5001"/>
            <Entry x:Name="RemotePort" Placeholder="Введите удаленный порт" Text="5001"/>
            
            <Button x:Name="Message" Text="Сообщения" Clicked="Message_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
