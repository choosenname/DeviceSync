<Window x:Class="App2.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:App2"
        Title="MessageWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Border>
                <TextBlock x:Name="Chat" Background="LightGray"/>
            </Border>
        </ScrollViewer>

        <TextBox x:Name="Message" Grid.Row="1" Text="Message" VerticalAlignment="Center"/>

        <Button x:Name="SendMessageButton" Grid.Row="2" Content="Send message" Click="SendMessage_Clicked" Margin="5"/>

        <Button x:Name="SendFileButton" Grid.Row="2" Content="Send file" Click="SendFile_Clicked" Margin="5" HorizontalAlignment="Right"/>
    </Grid>
</Window>