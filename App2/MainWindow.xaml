<Window x:Class="App2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App2"
        mc:Ignorable="d"
        Title="Device Sync" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel VerticalAlignment="Center" Margin="30,0">
                <Label x:Name="Address" Content="Your IP Address:" />
                <TextBlock x:Name="IpAddressTextBlock" />

                <TextBlock Text="Enter address"/>
                <TextBox x:Name="RemoteAddress" Text="192.168.0.1" Margin="0,10,0,0" />
                <TextBlock Text="Enter local port"/>
                <TextBox x:Name="LocalPort" Text="5001" Margin="0,10,0,0" />
                <TextBlock Text="Enter remote port"/>
                <TextBox x:Name="RemotePort" Text="5001" Margin="0,10,0,0" />

                <Button x:Name="Message" Content="Messages" Click="Message_Clicked" Margin="0,10,0,0" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>